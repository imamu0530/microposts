<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>     

    <%= link_to  @users_ing.count.to_s + " フォロー", followings_user_path(@user.id) %>　<%= link_to @users_er.count.to_s + "フォロワー", followers_user_path(@user.id) %>

    <section>
      <%= render 'profile' %>
    </section>

  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>