<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= f.label :profile %>
      <%= f.text_area :profile, class: 'form-control' %>

      <%= f.label :email %>
      <br />
      <%= @user.email %>
      <br /><br />

      <%= f.label :area %>
      <%= f.text_field :area, class: 'form-control' %>  
  
      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
